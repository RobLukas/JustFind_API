{
  "compilerOptions": {
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/app/*"],
      "config/*": ["src/config/*"],
      "utils/*": ["src/utils/*"],
      "database/*": ["src/database/*"],
      "offers/*": ["src/offers/*"],
    },
    "incremental": true
  },
  "include": ["./src", "./test"],
  "exclude": ["node_modules"]
}
