{
  "compilerOptions": {
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/app/*"],
      "config/*": ["src/config/*"],
      "utils/*": ["src/utils/*"],
      "database/*": ["src/database/*"],
      "features/*": ["src/features/*"],
      "geoCodeApi/*": ["src/features/geoCodeApi/*"],
      "offers/*": ["src/features/offers/*"],
      "companies/*": ["src/features/companies/*"],
      "offices/*": ["src/features/offices/*"]
    },
    "incremental": true
  },
  "include": ["./src", "./test"],
  "exclude": ["node_modules", "dist"]
}
